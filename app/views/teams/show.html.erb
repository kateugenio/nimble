<%= render 'layouts/navbar' %>
<div class="row">
	<div class="col-sm-2 text-left" id="left-nav">
		<%= render 'layouts/left-nav' %>
	</div>
	<div class="col-sm-10 text-center">
		<h1 class="heading"><%= @team.name %> Backlog</h1>


		<div id="new-userstory">

			<% if alert %>
		        <div class="alert alert-danger alert-dismissible fade show" role="alert">
				  <%= alert %>
				  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
				    <span aria-hidden="true">&times;</span>
				  </button>
				</div>
			<% end %>

			<%= form_for([@team, @team.user_stories.build]) do |form| %>
				<div class="form-group">
					<%= form.text_field :title, placeholder: 'Add a new user story or bug...', class: 'item-create-select' %>
					<%= select_tag 'item_type', options_for_select(['User Story', 'Bug']), class: 'form-control' %>
					<%= form.submit 'Add', class: 'btn btn-info' %>
				</div>
			<% end %>
		</div>

		<table class="table table-hover table-bordered">
			<thead class="thead-dark">
				<tr>
					<th>Order ID</th>
					<th>User Story/Bug</th>
					<th>Type</th>
					<th>Estimate</th>
					<th>State</th>
					<th>Priority</th>
					<th colspan="1"></th>
				</tr>
			</thead>
			<tbody>
				<% @team.user_stories.each do |us| %>
					<% if us.title != nil %>
						<tr>
							<td><%= us.order_id %></td>
							<td><%= us.title %></td>
							<td>User Story</td>
							<td><%= us.estimate %></td>
							<td><%= us.state %></td>
							<td><%= us.priority %></td>
							<td>Delete</td>
						</tr>
					<% end %>
				<% end %>
			</tbody>
		</table>

	</div>
</div>
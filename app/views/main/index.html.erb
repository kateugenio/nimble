<div class="row">
	<div class="col-sm-2" id="left-nav">
		<%= render 'layouts/left-nav' %>
	</div>
	<div class="col-sm-10 text-center">
        <% if alert %>
	        <div class="alert alert-danger alert-dismissible fade show" role="alert">
			  <%= alert %>
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			</div>
		<% end %>
		
		<p class="text-center heading">Teams</p>
		<div class="col-md-8 offset-2 text-center">
			<table class="table table-hover">
				<thead>
					<tr class="table-dark">
						<th>Team Name</th>
						<th>Description</th>
						<th colspan="1"></th>
					</tr>
				</thead>
				<tbody>
					<% current_user.company.teams.each do |team| %>
						<tr>
							<td><%= link_to team.name , team_path(team.id) %></td>
							<td><%= team.description %></td>
							<td>Delete</td>
						</tr>
					<% end %>
				</tbody>
			</table>

			<%= form_for([@company, current_user.company.teams.build], html: {class: 'form-inline'}) do |form| %>
				<div class="form-group">
					<%= form.text_field :name, class: 'form-control', placeholder: 'Add a new team' %>
				</div>
				<div>
					<%= form.submit 'Create', class: 'btn btn-info btn-lg' %>
				</div>
			<% end %>
		</div>
	</div>
</div>
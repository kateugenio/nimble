<%= render 'layouts/navbar' %>

<div class="row">
	<div class="col-sm-12 text-center">

		<!--<% if alert %>
        	<p class="alert alert-danger"><%= alert %></p>
        <% end %>-->
        <% if alert %>
	        <div class="alert alert-danger alert-dismissible fade show" role="alert">
			  <%= alert %>
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			</div>
		<% end %>

        <% if notice %>
	        <div class="alert alert-success alert-dismissible fade show" role="alert">
			  <%= notice %>
			  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
			    <span aria-hidden="true">&times;</span>
			  </button>
			</div>
		<% end %>

		<p class="text-center heading">Teams</p>
	</div>
</div>

<div class="row">
	<div class="col-sm-3">
	</div>

	<div class="col-sm-6 text-center">
		

		<table class="table table-hover table-bordered">
			<thead class="thead-dark">
				<tr>
					<th>Team Name</th>
					<th>Description</th>
					<th colspan="1"></th>
				</tr>
			</thead>
			<tbody>
				<% current_user.company.teams.each do |team| %>
					<tr>
						<td><%= link_to team.name , team_path(team.id) %></td>
						<td><%= team.description %></td>
						<td>Delete</td>
					</tr>
				<% end %>
			</tbody>
		</table>

		<%= form_for([@company, current_user.company.teams.build]) do |form| %>
			<div class="form-group">
				<%= form.text_field :name %>
			</div>
			<div>
				<%= form.submit 'Create Team', class: 'btn btn-info' %>
			</div>
		<% end %>
	</div>

	<div class="col-sm-3">
	</div>
</div>